{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "lib": [ "ES2020", "dom" ],
      "moduleResolution": "node",
      "rootDir": "./",
      "sourceMap": true,
      "allowJs": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": [ "node_modules", "build", "webpack" ],
    "types": [ "typePatches" ]
  }
  